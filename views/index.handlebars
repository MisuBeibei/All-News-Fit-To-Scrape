
<h1>New York Times</h1>
<hr>
<a class="articleURL" href="{{ this.articleURL }}">
    <div id="picture">
        <img src="{{ this.imgURL }}">
    </div>
</a>


<div id="nyt-one">
    <img src="../images/nyt1.jpg"/>
    <div id="buttons">
        <button id="next" data-id="{{ this._id }}">Next</button>
    </div>
</div>


<a class="articleURL" href="{{ this.articleURL }}">
    <div id="content">
        <h2>{{ this.title }}</h2>
        <p>{{ this.summary }}</p>
    </div>
</a>


<div id="nyt-two">
    <div class="comments">
        <h3>Post a Comment:</h3>
        <input id="comment" type="text" name="comment" placeholder="Type your comment here...">
        <button id="post" data-id="{{ this._id }}">Post</button>
    </div>
    <img src="../images/nyt2.jpg"/>
</div>


<div id="nyt-three">
    <div class="comments">
      <h3>Previously Left Comments:</h3>
        <div id="comment-holder">
            {{#each this.comments as |value key|}}
              <p><span class="number">{{ addOne key }}</span> {{ value.text }} <a href="#" class="remove" data-id="{{ value._id }}">X</a></p>
            {{/each}}
        </div>
    </div>
    <img src="../images/nyt3.png"/>
</div>
